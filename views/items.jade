extends layout

block content
  div(class='page groups-bg')
    div(class="title-font text-center")
        h1 Item Recommendations
    div(class="row mx-auto w-50")
        div(class="col")
            div(class="card")
                div(class="card-body")
                    h5(class="card-title") #{group.group_name}
                    h6(class="card-subtitle mb-2 text-muted") Price Limit: #{group.price_limit}, Deadline: #{group.deadline_at}
            each item in items
                div(class="card")
                    div(class="card-body")
                        h6(class="card-subtitle mb-2 text-muted")
                            a(href=#{item.url}) #{item.name}, #{item.price}
            a(href="central-nav.html",role="button",class="btn btn-primary mb-3") Done

